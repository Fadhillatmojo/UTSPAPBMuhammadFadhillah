<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity"
    android:background="@color/mainBlack">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/baseline_arrow_back_ios_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/order_summary_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/fontregular"
                    android:text="Order Summary"
                    android:textColor="@color/mainWhite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/order_summary_title"
                    android:background="@drawable/order_bg"
                    android:padding="20dp"

                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/imageview_order"
                            android:layout_width="106dp"
                            android:layout_height="124dp"
                            android:src="@drawable/details1"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="14dp">
                            <TextView
                                android:id="@+id/order_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="24dp"
                                android:fontFamily="@font/fontregular"
                                android:text="Behind Her Eyes"
                                android:textColor="@color/mainWhite"
                                android:textSize="18sp"/>
                            <TextView
                                android:id="@+id/tv_cinema"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/fontbold"
                                android:text="XXI Ambarukmo Plaza,Studio 1"
                                android:textColor="@color/mainWhite"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/fontregular"
                                android:text="24 Des 2022, 10.00AM"
                                android:textColor="@color/mainWhite"
                                android:textSize="14sp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="65dp"
                        android:text="Order Number"
                        android:fontFamily="@font/fontregular"
                        android:textColor="@color/mainWhite"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="1198804794001625088"
                        android:fontFamily="@font/fontregular"
                        android:textColor="@color/mainWhite"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Seat"
                        android:fontFamily="@font/fontregular"
                        android:textColor="@color/mainWhite"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_seat_type_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="Regular"
                        android:fontFamily="@font/fontregular"
                        android:textColor="@color/mainWhite"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Payment Method"
                        android:fontFamily="@font/fontregular"
                        android:textColor="@color/mainWhite"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_payment_method_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="Bank transfer (BNI)"
                        android:fontFamily="@font/fontregular"
                        android:textColor="@color/mainWhite"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv_seat_type_order2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Regular Seat"
                        android:fontFamily="@font/fontregular"
                        android:textColor="@color/mainWhite"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_price_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="Rp35.000 "
                        android:fontFamily="@font/fontregular"
                        android:textColor="@color/mainWhite"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Amount of Seat"
                        android:fontFamily="@font/fontregular"
                        android:textColor="@color/mainWhite"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_amount_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="2"
                        android:fontFamily="@font/fontregular"
                        android:textColor="@color/mainWhite"
                        android:textSize="16sp"/>
                    <View
                        android:layout_marginTop="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/mainWhite"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Actual Pay"
                        android:fontFamily="@font/fontregular"
                        android:textColor="@color/mainWhite"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_actual_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="Rp70.000"
                        android:fontFamily="@font/fontregular"
                        android:textColor="@color/mainWhite"
                        android:textSize="24sp"/>
                </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>